{
  "name": "skillup-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for SkillUp Learning Management System",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "migrate:roles": "node scripts/migrateAdministratorToAdmin.cjs --backup",
    "migrate:roles:dry": "node scripts/migrateAdministratorToAdmin.cjs --dry"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "private": true
}
