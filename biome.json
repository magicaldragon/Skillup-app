{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "formatter": {
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "formatWithErrors": true,
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "recommended": true
      },
      "a11y": {
        "noRedundantRoles": "warn",
        "noSvgWithoutTitle": "warn",
        "useButtonType": "warn"
      }
    }
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "functions/src/**/*.ts",
      "scripts/**/*.cjs",
      ".github/**/*.yml",
      "services/**/*.ts",
      "tests/**/*.ts",
      "utils/**/*.ts",
      "vite.config.ts",
      "vitest.config.ts",
      "vstorage.config.ts"
    ],
    "experimentalScannerIgnores": [
      "dist/**",
      "coverage/**",
      "reports/**",
      "functions/lib/**",
      "biome-full.json",
      "current_firebase_state.json",
      ".husky/**"
    ]
  }
}
