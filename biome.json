{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "useImportType": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "experimentalScannerIgnores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.git/**",
      "**/backend/**/*.js",
      "**/functions/lib/**",
      "**/*.md",
      "**/*.png",
      "**/*.svg",
      "**/*.yml",
      "**/*.yaml",
      "**/*.txt",
      "**/*.rules",
      "**/*.cache",
      "**/.env*",
      "**/firebase.json",
      "**/firestore.*",
      "**/serviceAccountKey*",
      "**/vstorage.config.ts",
      "**/test-*.js",
      "**/scripts/**/*.js",
      "**/scripts/**/*.cjs"
    ]
  }
}
